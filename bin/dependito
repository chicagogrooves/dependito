#!/usr/bin/env node

'use strict';

var Version = require('../lib/version');
var Commander = require('commander');
var Dependito = require('../lib/Dependito');
var converse = require('../lib/converse');
var fs = require('fs');
var _ = require('underscore')._;
var jsYaml = require('js-yaml');

Commander
  .version(Version)
  .usage('[options] <file|dir ...>')
  .option('-f, --format <name>', 'format to parse (amd/cjs/json/fig)', 'amd')
  .option('-t, --title <title>', 'title of generated document', 'Dependito')
  .option('-r, --recent <filename>', 'a json file of recent updates')
  .option('-s, --stats', 'display histograms of statistics', false)
  .option('-v, --reverse', 'reverse direction of arrows', false)
  .option('-d, --deps <filename>', 'when used with \'-f json\', a file to load deps from in {p1:[\'c1\',\'c2\']} format')
  .option('-y, --figFile <filename>', 'when used with \'-f fig\', a fig-format yaml file')
  .option('-x, --exclude <regex>', 'a regular expression for excluding modules')
  .parse(process.argv);

if (!Commander.args.length) {
  console.log(Commander.helpInformation());
  process.exit(1);
}

var src = Commander.args[0];

var recentUpdates = fs.existsSync(Commander.recent) && JSON.parse(fs.readFileSync(Commander.recent));
var directDeps;
if (Commander.format==='json' && fs.existsSync(Commander.deps)){
    directDeps = JSON.parse(fs.readFileSync(Commander.deps));
} else if (Commander.format==='fig' && fs.existsSync(Commander.figFile)){
    directDeps = getFiggyDeps(Commander.figFile);
}

// Fire up Dependito
var dependito = new Dependito(src, {
  cliOptions: Commander,
  recentUpdates: (recentUpdates || {}),
  directDeps: directDeps,
  transform: Commander.reverse ? converse : undefined
});

var html = dependito.generateHtml();
process.stdout.write(html);

function getFiggyDeps(figFile) {

    var doc = jsYaml.safeLoad(fs.readFileSync(figFile, 'utf8'));

    var returnObj = {};

    _.each(doc, function (value, key, list) {
        returnObj[key] = value.links || [];
    });

    return returnObj;
}
